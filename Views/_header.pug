header.header
    nav.nav.nav--tours 
        a(href="/").nav__el All tours
    .header__logo 
        img(src="/img/logo-white.png" alt="Natours log")
    nav.nav.nav--user 
        if user
            button.nav__el.nav__el--logout Log out
            a(href="/me").nav__el
                img.nav__user-img(src=`/img/users/${user.photo}` alt="User photo")
                span= user.name.split(" ")[0]
        else
            a.nav__el(href="/login") Log in 
            a.nav__el.nav__el--cta Sign up